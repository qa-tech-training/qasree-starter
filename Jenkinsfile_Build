//START-OF-SCRIPT
node {
    def SPLUNK_HOSTNAME='splunk-svc.splunk.svc.cluster.local'
    def DOCKER_HOME = tool name: 'docker-latest'
    def GRADLE_HOME = tool name: 'gradle-4.10.2', type: 'hudson.plugins.gradle.GradleInstallation'
    def REPO_URL = 'https://github.com/qa-tech-training/devops-webapp.git'
    def DOCKERHUB_REPO = 'cloudacademydevops/webapp'

    stage('Clone') {        
        git url: REPO_URL
    }

    stage('Build') {
        sh "${GRADLE_HOME}/bin/gradle build"
        sh "ls -la build/libs/*.war"
        sh "echo ====================="
        sh "cp build/libs/*.war docker/webapp.war"
        sh "pwd"
        sh "ls -la"
        sh "ls -la ./docker"
    }

    stage ('Docker Build') {
        docker.withTool('docker-latest') {
            sh "printenv"
            sh "pwd"
            sh "ls -la"
            sh "docker build -t ${DOCKERHUB_REPO}:latest --build-arg SPLUNK_HOST=${SPLUNK_HOSTNAME} ./docker"
        }
    }

    stage ('Docker Push') {
        docker.withTool('docker-latest') {
            withCredentials([usernamePassword(credentialsId: 'dockerhub_login',
                             usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                sh "docker login -u ${USERNAME} -p ${PASSWORD}"
                sh "docker tag ${DOCKERHUB_REPO}:latest ${USERNAME}/devops-webapp:latest"
                sh "docker tag ${DOCKERHUB_REPO}:latest ${USERNAME}/devops-webapp:${BUILD_NUMBER}"
                sh "docker push ${USERNAME}/devops-webapp:${BUILD_NUMBER}"
                sh "docker push ${USERNAME}/devops-webapp:latest"
            }            
        }
    }
}
//END-OF-SCRIPT
